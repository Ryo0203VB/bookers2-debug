<script src="https://kit.fontawesome.com/2d81efc77e.js" crossorigin="anonymous"></script>

<% if books.favorited_by?(current_user) %>
        <%= link_to  book_favorites_path(books.id), method: :delete, remote: true do %>
        <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
         <%= books.favorites.count %>
         <% end %>

         <% else %>
        <%= link_to  book_favorites_path(books.id), method: :post, remote: true do %>
        <i class="far fa-heart" aria-hidden="true"></i>
        <%= books.favorites.count %>
        <% end %>
<% end %>

